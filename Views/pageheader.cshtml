<div id="modalselect" class="modal hide fade" data-backdrop="static" tabindex="-1" >
    <div class="modal-header">
	    <h3 class=""><i class="fa fa-bars" style="margin-right:10px;"></i><span>Error</span></h3>
    </div>
    <div class="modal-body">
    </div>
    <div class="modal-footer">
	    <button type="button" data-dismiss="modal" class="btn" value="cancel">Cancel</button>
    </div>
</div>
<div id="modaladdsetting" class="modal hide fade" data-backdrop="static" tabindex="-1" >
    <div class="modal-header">
	    <h3 class=""><i class="fa fa-bars" style="margin-right:10px;"></i><span>Add Setting</span></h3>
    </div>
    <div class="modal-body">
    </div>
    <div class="modal-footer">
	    <button id="savesetting" type="button" data-dismiss="modal" class="btn green" value="save">Save</button>
	    <button type="button" data-dismiss="modal" class="btn" value="cancel">Cancel</button>
    </div>
</div>

@{
	string[] headertitle = ViewBag.headertitle.ToString().Split(' ');
	string headericon = ViewBag.headericon,
		headercolor = ViewBag.headercolor,
		headerfirst = headertitle[0],
		headerrest = headertitle.Length > 1 ? headertitle[1] : "",
		headerlast = headertitle.Length > 2 ? headertitle[2] : "";
}
<!-- BEGIN HEADER -->
<div class="header navbar navbar-inverse navbar-fixed-top" id="headernavbar" >
	<!-- BEGIN TOP NAVIGATION BAR -->
	<div class="navbar-inner">
		<div class="container-fluid">
			<!-- BEGIN LOGO -->
			<a class="brand">
				<i class="fa @headericon"></i>
				<span class="lftitle">@headerfirst<span class="lftitle @headercolor">@headerrest</span></span>
				<span class="lftitle hidden-phone">@headerlast</span>
			</a>
			<!-- END LOGO -->
			<!-- BEGIN RESPONSIVE MENU TOGGLER -->
			<a href="javascript:;" class="btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
				<img src="~/content/img/menu-toggler.png" alt="" />
			</a>          
			<!-- END RESPONSIVE MENU TOGGLER -->
		</div>
	</div>
	<!-- END TOP NAVIGATION BAR -->
</div>
<!-- END HEADER -->